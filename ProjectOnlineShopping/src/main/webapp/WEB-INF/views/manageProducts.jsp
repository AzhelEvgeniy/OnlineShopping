<div class="container">

    <div class="row">
        <div class="com-md-offset-2 col-md-8">

            <div class="panel panel-primary">

                <div class="panel-heading">
                    <h4>Product Management</h4>
                </div>

                <div class="panel-body">
                    <!-- FORM ELEMENTS -->
                    <form class="form-horizontal">

                        <div class="form-group">
                            <label class="control-label col-md-4" for="name">Enter Product</label>
                            <div class="col-md-8">
                                <input type="text" name="name" id="name" placeholder="Product name" class="form-control"/>

                                <em class="help-block">Please enter Product Name!</em>
                             </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-4" for="brand">Enter Brand</label>
